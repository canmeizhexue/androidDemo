<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.canmeizhexue.common.views.viewflow.ViewFlow
        android:id="@+id/banner_viewflow"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#ff0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_alignBottom="@+id/viewflow"
        android:background="#44000000">

        <com.canmeizhexue.common.views.viewflow.CircleFlowIndicator
            android:id="@+id/banner_flow_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#11000000"
            vf:activeColor="#ffffff"
            vf:activeType="fill"
            vf:circleSeparation="20dip"
            vf:inactiveColor="#B0B0B0"
            vf:inactiveType="fill"
            vf:indicatorRadius="4dp"/>

    </LinearLayout>
</RelativeLayout>